<div class='header-layout'>
  <header id='header'>
    <h1 class='text-1'>Todos</h1>
    <%= link_to "New todo", new_todo_path, class: 'btn btn--primary' %>
  </header>
  <main id='main'>
    <div id="todos" class='bg-main'>
      <% @todos.each do |todo| %>
        <%= render todo %>
        <p>
        <%= link_to "Show this todo", todo %>
        </p>
      <% end %>
    </div>


  </main>
</div>
